<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Forgot Password</title>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    
    <div class="mt-3">
      <h1 class="mb-3">Reset Password</h1>
      <form method="post" id="form">
        <div class="mb-3 form-floating">
          <input type="password" class="form-control" id="password" placeholder="Your password">
          <label for="password">Password</label>
          <span id="passwordHelpInline" class="form-text">
            Password must contain at least eight characters, one number, one uppercase, one lowercase letter
          </span>
        </div>
        <div class="mb-3 form-floating">
          <input type="password" class="form-control" id="password-confirm" placeholder="Confirm password">
          <label for="password-confirm">Confirm password</label>
        </div>

        <button style="width: 100%; background-color: #f55c7a; border-color: #f55c7a;" class="btn btn-primary btn-lg rounded-pill" type="submit">Submit</button>
      </form>
    </div>
  </div>
</body>
<script>
  const passwordPattern = /^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9]).{8,}$/;

  const passwordInput = document.getElementById('password');
  const passwordConfirmInput = document.getElementById("password-confirm");
  const form = document.getElementById("form");
  
  form.addEventListener("submit", resetPassword)

  function resetPassword (e) {
    e.preventDefault()

    const password = passwordInput.value;
    const passwordConfirm = passwordConfirmInput.value;

    const isPasswordValid = passwordPattern.test(password)

    if(!isPasswordValid) {
      return alert("Password must contain at least eight characters, one number, one uppercase, one lowercase letter")
    }

    if(password !== passwordConfirm) {
      return alert("Password didn't match")
    }

    fetch(window.location.href, {
      method: "POST",
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        password: password,
         passwordConfirm: passwordConfirm
      })
    }).catch((err)=> {
      alert("Something went wrong")
    })
    
    window.open("exp://192.168.1.110:19000")
  }

</script>
</html>